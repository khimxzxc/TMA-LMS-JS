{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx", // Включает поддержку JSX для React 17+
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false // Можете включить для строгой типизации
  },
  "include": ["src"], // Путь к вашим исходным файлам
  "exclude": ["node_modules"]
}
